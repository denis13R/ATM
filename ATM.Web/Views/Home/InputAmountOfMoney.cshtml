
@{
    ViewBag.Title = "InputAmountOfMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ATM.BusinessLogic.Models.CardModel

@using (Html.BeginForm("WithdrawMoney", "Home", FormMethod.Post))
{
    <div class="container">
        @Html.Hidden("cardNum", Model.CardNum)
        @Html.Hidden("balance", Model.Balance)
        <div class="text-center">
            <h1>Money Withdrawal</h1>
        </div>
        <hr />
        <div class="text-center">
            <p>Input withdrawal money amount:</p>
            <p>@Html.TextBox("amount")</p>
        </div>
        <div class="navbar-btn text-center">
            <p class="text-center">
                <input type="button" class="btn btn-default digit" id="1" value="1" />
                <input type="button" class="btn btn-default digit" id="2" value="2" />
                <input type="button" class="btn btn-default digit" id="3" value="3" />
            </p>
            <p class="text-center">
                <input type="button" class="btn btn-default digit" id="4" value="4" />
                <input type="button" class="btn btn-default digit" id="5" value="5" />
                <input type="button" class="btn btn-default digit" id="6" value="6" />
            </p>
            <p class="text-center">
                <input type="button" class="btn btn-default digit" id="7" value="7" />
                <input type="button" class="btn btn-default digit" id="8" value="8" />
                <input type="button" class="btn btn-default digit" id="9" value="9" />
            </p>
            <p class="text-center">
                <input type="button" class="btn btn-default digit" id="0" value="0" />
            </p>
        </div>
        <div class="navbar-btn col-xs-2 col-xs-offset-5 text-center">
            <input type="submit" class="btn btn-primary btn-large btn-block" value="OK" />
            @Html.ActionLink("Clear", "InputAmountOfMoney", "Home", new { cardNum = Model.CardNum }, new { @class = "btn btn-default btn-large btn-block" })
            @Html.ActionLink("Exit", "InputCard", "Home", null, new { @class = "btn btn-default btn-large btn-block" })
        </div>
    </div>

    <script type="text/javascript">
        $('.digit').click(function (e) {
            var withdarawalAmount = $('#amount').val();
            withdarawalAmount += e.currentTarget.id;
            $('#amount').val(withdarawalAmount);
        });

        $("#amount").keydown(function (e) {
            return false;
        });
    </script>
}
