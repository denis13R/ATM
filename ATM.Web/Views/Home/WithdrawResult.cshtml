
@{
    ViewBag.Title = "WithdrawResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ATM.Web.ViewModels.WithdrawResultViewModel

<div class="container">
    <div class="text-center">
        <h1>Withdrawal Result</h1>
    </div>
    <hr />
    <div class="text-center table-responsive col-xs-4 col-xs-offset-4">
        <table class="table table-bordered table-striped table-condensed">
            <tbody>
                <tr>
                    <td>Card</td>
                    <td>@Html.DisplayFor(model => model.CardNumWithDashes)</td>
                </tr>
                <tr>
                    <td>Balance</td>
                    <td>@Html.DisplayFor(model => model.Balance)</td>
                </tr>
                <tr>
                    <td>Withdrew Money</td>
                    <td>@Html.DisplayFor(model => model.WithdrewAmount)</td>
                </tr>
                <tr>
                    <td>Operation Time</td>
                    <td>@Html.DisplayFor(model => model.DateAndTime)</td>
                </tr>
            </tbody>
        </table> 
    </div>
    <div class="navbar-btn col-xs-2 col-xs-offset-5 text-center">
        @Html.ActionLink("Back", Model.BackAction, Model.BackController, new { cardNum = Model.CardNum }, new { @class = "btn btn-primary btn-large btn-block" })
        @Html.ActionLink("Exit", "InputCard", "Home", null, new { @class = "btn btn-default btn-large btn-block" })
    </div>
</div>
